{
  "name": "nexus-decorators",
  "version": "0.2.1",
  "main": "dist",
  "module": "dist-esm",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/graphql-nexus/nexus-decorators.git"
  },
  "author": {
    "name": "Tim Griesser",
    "url": "https://github.com/tgriesser"
  },
  "files": [
    "src",
    "dist",
    "dist-esm",
    "LICENSE.md",
    "README.md",
    "yarn.lock"
  ],
  "scripts": {
    "clean": "rm -rf dist && rm -rf dist-esm",
    "prebuild": "yarn clean",
    "prepublish": "yarn clean && yarn build && yarn test",
    "build": "tsc && tsc --build tsconfig.cjs.json && tsc --build tsconfig.esm.json",
    "watch": "tsc --build tsconfig.cjs.json --watch",
    "dev": "cd example && yarn start",
    "test": "jest",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand"
  },
  "license": "MIT",
  "dependencies": {
    "stack-utils": "^2.0.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^12",
    "@types/stack-utils": "^2.0.0",
    "esbuild": "^0.12.9",
    "graphql": "^15.5.0",
    "jest": "^27.0.4",
    "jest-esbuild": "^0.2.0",
    "nexus": "^1.1.0-next.20",
    "typescript": "^4.3.2"
  }
}
